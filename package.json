{
   "private": true,
   "name": "scribbleLabs",
   "version": "1.0.0",
   "author": "Ankit Sharma",
   "description": "Simple boilerplate for a Nest + React project",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/LandazuriPaul/nest-react.git"
   },
   "homepage": "",
   "workspaces": [
      "clients/*",
      "server/*",
      "common/*"
   ],
   "nohoist": [
      "react-native",
      "**react-native**",
      "react-native/**"
   ],
   "scripts": {
      "start:web": "yarn workspace web start",
      "dev:web": "yarn workspace web dev",
      "start:mobile": "yarn workspace mobile start",
      "start:server": "yarn workspace mainframe start:dev",
      "storybook:web": "yarn workspace web storybook",
      "dev": "concurrently \"yarn dev:web\" \"yarn start:server\"",
      "lint": "yarn workspaces run lint"
   },
   "dependencies": {
      "concurrently": "^6.0.2"
   }
}
